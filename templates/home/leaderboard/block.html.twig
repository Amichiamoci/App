<table class="table table-striped table-hover">
   
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> Parrocchia </th>
            <th scope="col"> Punti </th>
        </tr>
    </thead>

    <tbody>
        {% for church in leaderboard %}
            <tr>
                <th scope="row">
                    {{ church.Position }}
                </th>
                <td>
                    <a href="{{ path('church_view', {'id': church.Id })}}" 
                        class="link-secondary link-underline link-underline-opacity-0">
                        {{ church.Name }}
                    </a>
                </td>
                <td>
                    <output>
                        {{ church.Score }}
                    </output>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">
                    Classifica non ancora disponibile
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>