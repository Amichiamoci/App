{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block description %}Effettua il login per vedere la pagina{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Sei gi√† loggato come {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Esci</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">
            Compila i campi
        </h1>
        
        <div class="form-floating mb-3">
            <input 
                type="email" value="{{ last_username }}" 
                name="_username" id="username" 
                class="form-control" autocomplete="email" 
                required autofocus 
                placeholder="nome@mail.com">
            <label for="username">Email</label>
        </div>

        <div class="form-floating mb-3">
            <input 
                type="password" 
                name="_password" id="password" 
                class="form-control" 
                autocomplete="current-password" required>
            <label for="password">Password</label>
        </div>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <div class="checkbox mb-3">
            <input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
            <label for="_remember_me" class="form-check-label">Resta collegato</label>
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Entra
        </button>
    </form>

    <div class="container">
    <!--
        <h3>
            Login tramite provider
        </h3>
    -->
        <div class="btn-group" role="group" aria-label="Basic example">
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" class="button">
                <span>Login tramite Google</span>
                <twig:ux:icon name="bi:google" height="14" />
            </a>
            <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" class="button">
                <span>Login tramite Facebook</span>
                <twig:ux:icon name="bi:facebook" height="14" />
            </a>
        </div>
    </div>
{% endblock %}
